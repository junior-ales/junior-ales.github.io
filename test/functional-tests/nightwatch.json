{
  "src_folders" : ["./test/functional-tests/tests"],
  "output_folder" : "./test/functional-tests/reports",
  "page_objects_path": "./test/functional-tests/page-objects",
  "globals_path": "./test/functional-tests/globalConfig.js",

  "selenium" : {
    "start_process" : true,
    "server_path" : "./node_modules/selenium-server/lib/runner/selenium-server-standalone-2.48.2.jar",
    "log_path" : "./test/functional-tests/logs",
    "host" : "127.0.0.1",
    "port" : 4444
  },

  "test_settings" : {
    "default" : {
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "on_failure" : true,
        "on_error" : false,
        "path" : "./test/functional-tests/screenshots"
      },
      "cli_args" : {
        "webdriver.chrome.driver" : "./node_modules/chromedriver/lib/chromedriver/chromedriver"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "saucelabs" : {
      "selenium_host" : "ondemand.saucelabs.com",
      "selenium_port" : 80,
      "username" : "${SAUCE_USERNAME}",
      "access_key" : "${SAUCE_ACCESS_KEY}",
      "use_ssl" : false,
      "silent" : true,
      "output" : true,
      "screenshots" : {
        "enabled" : false,
        "on_failure" : true,
        "path" : ""
      },
      "desiredCapabilities": {
        "name" : "Cover Page Tests",
        "build" : "1.2.0",
        "passed" : true,
        "recordVideo": false,
        "videoUploadOnPass": false,
        "recordScreenshots": false,
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      },
      "selenium" : {
        "start_process" : false
      }
    },

    "ci": {
      "cli_args" : {
        "webdriver.chrome.driver" : "/usr/local/bin/chromedriver"
      }
    },

    "safari": {
      "desiredCapabilities": {
        "browserName": "safari",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
