{
  "name": "junior-ales.github.io",
  "version": "1.1.1",
  "description": "My Web Cover Page",
  "main": "start.js",
  "scripts": {
    "start": "browser-sync  start --server --files='*.html, css/*.css, scripts/*.js'",
    "test": "mocha --recursive -R spec specs/ -t 10000",
    "test:all": "SELENIUM_BROWSER=safari npm run test && SELENIUM_BROWSER=chrome npm run test && SELENIUM_BROWSER=firefox npm run test && npm run test",
    "build:js": "uglifyjs src/*.js  --compress --mangle --stats --lint -o scripts/main.min.js",
    "server:up": "node start.js",
    "server:down": "pkill -SIGINT node",

    "prestart": "npm run build:js",
    "pretest": "npm run build:js && npm run server:up &",
    "posttest": "npm run server:down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junior-ales/junior-ales.github.io.git"
  },
  "author": "@junior_ales",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/junior-ales/junior-ales.github.io/issues"
  },
  "homepage": "http://juniorales.com",
  "devDependencies": {
    "browser-sync": "^2.7.13",
    "chai": "^3.0.0",
    "ejs": "^2.3.1",
    "express": "^4.12.4",
    "mocha": "^2.2.5",
    "selenium-webdriver": "^2.46.1",
    "uglify-js": "^2.4.23"
  }
}
